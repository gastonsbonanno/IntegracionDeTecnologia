<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigActivity">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondoappclaro" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ConfiguraciÃ³n de la temperatura" />

    <EditText
        android:id="@+id/lo_confTemp"
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:layout_marginBottom="99dp"
        android:background="@drawable/textinputborder"
        android:inputType="textVisiblePassword"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/lo_botonComenzar"
        app:layout_constraintEnd_toEndOf="parent"></EditText>

    <Button
        android:id="@+id/lo_botonComenzar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="172dp"
        android:layout_marginEnd="136dp"
        android:background="@drawable/textinputborder"
        android:text="Comenzar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>